<% if (success && success.length) { %>
  <div class="alert alert-success d-flex align-items-center justify-content-between col-6 offset-3" role="alert">
    <span><%= success %></span> 
    <button
      type="button"
      class="btn-close ms-2"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
 
  
  <% if (error && error.length) { %>
    <div class="alert alert-danger d-flex align-items-center justify-content-between col-6 offset-3" role="alert">
      <span><%= error %></span> 
      <button
        type="button"
        class="btn-close ms-2"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>