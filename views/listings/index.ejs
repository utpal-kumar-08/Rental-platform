        <div><i class="fa-solid fa-landmark-dome"></i></div>
        <p>Dome</p>
      </div>

      <div class="dropdown d-md-block d-lg-none">
        <button class="btn btn-light dropdown-toggle" type="button" id="moreFilters" data-bs-toggle="dropdown">
          <i class="fa-solid fa-ellipsis"></i>
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/listings"><i class="fa-brands fa-fort-awesome"></i>Castle</a></li>
          <li><a class="dropdown-item" href="/listings"><i class="fa-solid fa-person-swimming"></i>Amazing Pool</a></li>
          <li><a class="dropdown-item" href="/listings"><i class="fa-solid fa-campground"></i>Camping</a></li>
          <li><a class="dropdown-item" href="/listings"><i class="fa-solid fa-snowflake"></i>Arctic</a></li>
          <li><a class="dropdown-item" href="/listings"><i class="fa-solid fa-cow"></i>Farms</a></li>
